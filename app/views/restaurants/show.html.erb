<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>

<h2>Reviews</h2>
<% @restaurant.reviews.each do |review| %>
  <div class="review">
    <p><%= review.content %> - Rating: <%= review.rating %></p>
  </div>
<% end %>

<h2>Add a Review</h2>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit" %>
<% end %>
